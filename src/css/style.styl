$font = "PT Sans", Arial, sans-serif

*
    margin 0
    padding 0
    box-sizing border-box

body
    font-family $font

.header
    height 40px
    width 100%
    padding 0 20px
    color #fff
    background #000

.logo
    font-size 16px
    line-height 38px

.board
    padding 5px 5px 80px

.file
    position relative
    display inline-block
    width 200px
    margin 5px
    vertical-align top
    overflow hidden

    &__delete
        position absolute
        width 30px
        height 140px
        top 0
        right 0
        border 0
        outline 0
        background rgba(0, 0, 0, .6)
        cursor pointer

        &:before
        &:after
            content ''
            position absolute
            width 20px
            height 2px
            top 50%
            left 50%
            margin -2px 0 0 -10px
            background #fff
            pointer-events none
            transform rotate(-45deg)

        &:after
            transform rotate(45deg)

    &__image
        width 100%
        height 140px
        margin-bottom 10px
        background 50% 50% / cover no-repeat
        vertical-align top
        cursor pointer

    &__name
        font-family $font
        font-size 14px
        border 0
        border-bottom 2px #e2e2e2 solid
        outline 0
        transition border-color .2s ease

        &:focus
            border-color #aba8a8

.file-loader
    position absolute
    width 60px
    height 60px
    left 20px
    bottom 20px
    background #fb2828
    border-radius 50%
    cursor pointer

    &:before
    &:after
        content ''
        position absolute
        width 24px
        height 4px
        top 50%
        left 50%
        margin -2px 0 0 -12px
        background #fff
        pointer-events none

    &:after
        transform rotate(90deg)

    .file-loader__input
        width 100%
        height 100%
        opacity 0
        cursor pointer


.fullscreen
    position absolute
    display flex
    align-items center
    justify-content center
    width 100vw
    height 100vh
    top 0
    left 0
    background rgba(0, 0, 0, .6)
    z-index 5

    &.fullscreen-hidden
        display none

    .fullscreen-image
        max-width 100%
        max-height 100%

    .fullscreen-name
        position absolute
        height 60px
        right 60px
        top 0
        padding 0 20px
        color #fff
        font 18px/60px $font
        background rgba(0, 0, 0, .5)

    .fullscreen-close
        position absolute
        width 60px
        height 60px
        right 0
        top 0
        background rgba(0, 0, 0, .5)
        border 0
        outline 0
        cursor pointer

        &:before
        &:after
            content ''
            position absolute
            width 24px
            height 2px
            top 50%
            left 50%
            margin -2px 0 0 -12px
            background #fff
            pointer-events none
            transform rotate(45deg)

        &:after
            transform rotate(-45deg)